    <!-- 姓名输入面板（新增视频模块在面板内部上方） -->
    <div class="name-panel" id="namePanel">
        <!-- 新增：HTML原生视频播放模块（核心） -->
        <div class="video-container">
            <video
                src="meeting-intro.mp4"  <!-- 【重点修改】替换为你的视频文件名（mp4格式最佳） -->
                width="100%"
                controls  <!-- 显示播放/暂停/进度条/音量控件（必选，方便操作） -->
                muted  <!-- 静音（飞书要求：自动播放必须搭配静音，手动播放可取消） -->
                poster="meeting-cover.jpg"  <!-- 【可选】替换为你的视频封面图文件名（jpg/png格式） -->
                preload="metadata"  <!-- 预加载视频元数据（加快加载速度，不浪费流量） -->
            >
                你的浏览器/飞书不支持视频播放，请更换最新版本重试。
            </video>
        </div>

        <h3>请输入您的姓名</h3>
        <input type="text" id="userName" placeholder="例如：张三" maxlength="10">
        <button onclick="enter3DNav()">确认进入3D导航</button>
    </div>

    <!-- 3D场景容器（自动生成，无需修改） -->
    <div id="3dContainer"></div>

    <script>
        // 全局变量定义（已保留）
        let scene, camera, renderer, userInfo = null;

        // 姓名验证与进入3D导航（已保留）
        function enter3DNav() {
            const userName = document.getElementById("userName").value.trim();
            if (!userName) {
                alert("请输入您的姓名哦！");
                return;
            }
            userInfo = { name: userName };
            // 隐藏姓名输入面板
            document.getElementById("namePanel").style.display = "none";
            // 初始化3D场景
            init3DScene();
            // 渲染3D场景
            animate();
        }

        // 初始化3D场景（已保留，保证3D导航功能正常）
        function init3DScene() {
            // 1. 创建场景
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0xf5f7fa);

            // 2. 创建相机
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.set(0, 2, 10);

            // 3. 创建渲染器
            renderer = new THREE.WebGLRenderer({ antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(window.devicePixelRatio);
            document.getElementById("3dContainer").appendChild(renderer.domElement);

            // 4. 添加辅助网格（方便查看3D场景布局）
            const gridHelper = new THREE.GridHelper(20, 20, 0xcccccc, 0xeeeeee);
            scene.add(gridHelper);

            // 5. 添加光源（让3D物体更有层次感）
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.8);
            scene.add(ambientLight);
            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.6);
            directionalLight.position.set(5, 10, 7.5);
            scene.add(directionalLight);

            // 6. 添加示例物体（会场座位，演示3D导航效果）
            const seatGeometry = new THREE.BoxGeometry(0.5, 0.5, 0.5);
            const seatMaterial = new THREE.MeshLambertMaterial({ color: 0x2f80ed });

            // 生成一排座位
            for (let i = -5; i <= 5; i++) {
                const seat = new THREE.Mesh(seatGeometry, seatMaterial);
                seat.position.set(i, 0.25, 0);
                scene.add(seat);
            }

            // 7. 窗口大小自适应
            window.addEventListener("resize", onWindowResize);
        }

        // 窗口大小自适应（已保留）
        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        // 渲染循环（已保留，保证3D场景动态更新）
        function animate() {
            requestAnimationFrame(animate);
            // 可选：让场景缓慢旋转，增加视觉效果
            scene.rotation.y += 0.005;
            renderer.render(scene, camera);
        }
    </script>
</body>
